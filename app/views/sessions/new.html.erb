<% content_for :title, "Login" %>
<div class="row justify-content-center mt-3">
    <div class="col-md-6">
        <div class="card w-75 mb-3">
            <div class="card-body">
                <h5 class="card-title fs-3 text-center">Log in</h5>
                <%= form_for(:session, url: login_path) do |form| %>
                    <div class="mb-3">
                        <%= form.label :email, class: "form-label" %>
                        <%= form.text_field :email, type: "email", class: "form-control" %>
                    </div>
                    <div class="mb-3">
                        <%= form.label :password, class: "form-label" %>
                        <%= link_to '(forgot password)', new_password_reset_path %>
                        <%= form.text_field :password, type: "password", class: "form-control" %>
                    </div>
                    <div class="mb-3">
                        <%= form.label :remember_me, class: "form-label" %>
                        <%= form.check_box :remember_me, type: "checkbox", class: "orm-check-input" %>
                    </div>

                    <%= form.submit %>
                    <p class="mt-3">New user? <%= link_to 'Sign up now!', signup_path %></p>
                <% end %>
            </div>
        </div>
    </div>
</div>
